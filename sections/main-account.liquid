
<script>
  // Redirect logged-in users to Red Pill AI Dashboard with SSO
  (function() {
    // Get customer data from Shopify
    {% if customer %}
      const customerId = {{ customer.id }};
      const customerEmail = "{{ customer.email | escape }}";
      const customerName = "{{ customer.name | escape }}";
      const shop = "{{ shop.permanent_domain }}";
      const timestamp = Date.now();
      
      // Build SSO URL
      const appUrl = `https://app.redpillgpt.com/?logged_in_customer_id=${customerId}&shop=${shop}&timestamp=${timestamp}&email=${encodeURIComponent(customerEmail)}&name=${encodeURIComponent(customerName)}`;
      
      // Redirect to app
      window.location.replace(appUrl);
    {% else %}
      // Not logged in, redirect to login
      window.location.replace("/account/login");
    {% endif %}
  })();
</script>

